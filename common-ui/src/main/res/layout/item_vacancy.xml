<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_marginVertical="@dimen/dp_9"
    android:id="@+id/itemVacancy">

    <ImageView
        android:id="@+id/itemLogoVacancy"
        android:layout_width="@dimen/sizeLogoItemFavorite"
        android:layout_height="@dimen/sizeLogoItemFavorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_logo_item_favorite" />

    <TextView
        android:id="@+id/itemNameVacancyAndLocation"
        style="@style/TextViewMedium22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/vacancy_and_location_screen_header"
        app:layout_constraintStart_toEndOf="@+id/itemLogoVacancy"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemNameCompany"
        style="@style/TextViewRegular16NoPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/favorites_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemLogoVacancy"
        app:layout_constraintTop_toBottomOf="@+id/itemNameVacancyAndLocation" />

    <TextView
        android:id="@+id/itemSalarySize"
        style="@style/TextViewRegular16NoPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/salary_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemLogoVacancy"
        app:layout_constraintTop_toBottomOf="@+id/itemNameCompany" />

</androidx.constraintlayout.widget.ConstraintLayout>
